CREATE OR REPLACE FUNCTION $APP_NAME$Views.SP_DCPAcceptContractGoal(
    pContractId INTEGER,
    pGoalId INTEGER
) 
RETURNS VOID AS $$
BEGIN
	UPDATE $APP_NAME$.Contract_Goal
	SET AcceptedFlag = True
	WHERE ContractId = pContractId
	AND (GoalId = pGoalId OR pGoalId IS NULL)
	;
END
$$ LANGUAGE 'plpgsql';