CREATE OR REPLACE FUNCTION $APP_NAME$Views.SP_DCPGetSchool(
    pSchoolId INTEGER
)
RETURNS SETOF $APP_NAME$Views.School AS $$
BEGIN
    RETURN QUERY -- Return these query results
    SELECT SchoolId, SchoolDisplayName, SchoolAbbreviation, Address, City, Department
    FROM $APP_NAME$Views.School
    WHERE (SchoolId = pSchoolId OR pSchoolId IS NULL)-- Return school (if specified, otherwise return all)
    ORDER BY SchoolDisplayName
    ;
END;
$$ LANGUAGE 'plpgsql';